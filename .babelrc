{
    "presets": [
        "@babel/typescript",
        ["@babel/env", {
            "targets": {
                "chrome": "44",
                "ie": "11"
            },
            "useBuiltIns": "usage",
            "corejs": { 
                "version": 3, 
                "proposals": true
            }
        }]
    ],
    "plugins": [
        ["@babel/proposal-decorators", { "legacy": true }],
        ["@babel/proposal-class-properties", { "loose": true }],
        "@babel/proposal-object-rest-spread",
        "module:mopt"
    ]
}
