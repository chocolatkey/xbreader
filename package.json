{
  "name": "xbreader",
  "version": "0.35.0",
  "description": "Fixed-layout publication reader for the web",
  "author": "Henry <chocolatkey@gmail.com>",
  "contributors": [
    "chocolatkey <chocolatkey@gmail.com> (https://chocolatkey.com)"
  ],
  "license": "MIT",
  "homepage": "https://github.com/chocolatkey/xbreader",
  "bugs": {
    "url": "https://github.com/chocolatkey/xbreader/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chocolatkey/xbreader.git"
  },
  "browser": "dist/xbreader.js",
  "scripts": {
    "start": "webpack serve --config webpack.dev.js",
    "build": "rm -rf dist && rm -rf stats && webpack --config webpack.prod.js && rm -f dist/xbstyles-* dist/loader-*",
    "build:analyze": "rm -rf dist && rm -rf stats && webpack --config webpack.prod.js --analyze",
    "push": "surge dist/ xb.yrkz.me",
    "lint": "eslint --ext .js,.ts --ignore-path .gitignore ."
  },
  "files": [
    "dist/!(*.json|logo.svg)"
  ],
  "keywords": [
    "webpub",
    "fixed-layout reader",
    "webpub reader"
  ],
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.5.4",
    "@types/mithril": "^2.0.2",
    "@types/offscreencanvas": "^2019.6.4",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "babel-loader": "^8.0.6",
    "babel-plugin-ttag": "^1.7.29",
    "core-js": "3",
    "css-loader": "^5.0.0",
    "eslint": "^7.12.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.0",
    "mini-css-extract-plugin": "^1.2.1",
    "mithril": "^2.0.3",
    "mopt": "^5.1.1",
    "node-sass": "^5.0.0",
    "r2-shared-js": "^1.0.23",
    "sass-loader": "^10.0.5",
    "source-map-loader": "^1.1.2",
    "ta-json-x": "^2.5.1",
    "ts-loader": "^8.0.8",
    "ttag": "^1.7.20",
    "ttag-cli": "^1.7.28",
    "ttag-webpack-plugin": "^0.0.6",
    "typescript": "^4.0.5",
    "webpack": "^5.4.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "4.0.0-beta.0",
    "webpack-fix-style-only-entries": "^0.3.0",
    "webpackbar": "^5.0.0-3"
  },
  "dependencies": {
    "util": "^0.12.3"
  }
}
